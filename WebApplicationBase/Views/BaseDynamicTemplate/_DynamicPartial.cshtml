@model WebApplicationBase.ViewModels.FvmDynamic.VM_Data
@{     
    //var index = ViewData["index"] != null ? (int)ViewData["index"] : -1;
    //var index = ViewData["index"] as int?0;
    int index = (ViewData["index"] as int?) ?? 0; 
}
<div class="row mb-3 dynamic">
    @Html.HiddenFor(x => x.ListDynamicData[index].DynamicId, new { @class = "form-control DynamicID" })
    <div class="col-10">
        @Html.TextBoxFor(x => x.ListDynamicData[index].Address, new { @class = "form-control DynamicAddress" })
        @Html.ValidationMessageFor(x => x.ListDynamicData[index].Address, "", new { @class = "text-danger" })
    </div>
    <div class="col-2">
        <button type="button" class="btn btn-danger btnDynamicDelete" onclick="dynamicDetele1(this)">刪除</button>
    </div>
</div>

<script>
    function dynamicDetele1(object) {
        //alert("dynamicDetele1");
        $(object).closest(".dynamic").remove();
    }
</script>